{% extends 'base.html.twig' %}

{% block title %}Rejoindre WorkTogether{% endblock %}

{% block body %}
    <div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center py-5">
        <div class="card shadow-lg border-0" style="max-width: 600px; width: 100%; border-radius: 15px; background: rgba(255, 255, 255, 0.95);">
            <div class="card-body p-4 p-md-5">
                <div class="text-center mb-4">
                    <h2 class="fw-bold text-primary">Créer un compte client</h2>
                    <p class="text-muted">Rejoignez WorkTogether Data Solutions pour gérer vos baies informatiques.</p>
                </div>

                {{ form_start(registrationForm, {'attr': {'class': 'needs-validation'}}) }}

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label small fw-bold">Prénom</label>
                        {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control', 'placeholder': 'Jean'}}) }}
                        {{ form_errors(registrationForm.firstName) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label small fw-bold">Nom</label>
                        {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control', 'placeholder': 'Dupont'}}) }}
                        {{ form_errors(registrationForm.lastName) }}
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label small fw-bold">Adresse Email Professionnelle</label>
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'contact@entreprise.com'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>

                {# Boutons Radio pour le choix du type de compte #}
                <div class="mb-4 text-center">
                    <label class="form-label small fw-bold text-uppercase d-block mb-3">Vous êtes :</label>
                    <div class="d-flex justify-content-center gap-4">
                        {% for child in registrationForm.accountType %}
                            <div class="form-check form-check-inline">
                                {# Le onclick déclenche la fonction JS à chaque clic #}
                                {{ form_widget(child, {'attr': {'class': 'form-check-input', 'onclick': 'toggleCompanyFields()'}}) }}
                                {{ form_label(child, null, {'label_attr': {'class': 'form-check-label fw-bold small'}}) }}
                            </div>
                        {% endfor %}
                    </div>
                </div>

                {# Les champs Entreprise (Cachés par défaut) #}
                <div id="company-fields" style="display: none;" class="p-3 bg-light rounded border mb-4">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label small fw-bold text-uppercase">Nom de l'entreprise</label>
                            {{ form_widget(registrationForm.companyName, {'attr': {'class': 'form-control', 'placeholder': 'Ma Super Boîte'}}) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label small fw-bold text-uppercase">Numéro SIRET</label>
                            {{ form_widget(registrationForm.siret, {'attr': {'class': 'form-control', 'placeholder': '123 456 789 00012'}}) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label small fw-bold text-uppercase">Mot de passe</label>
                        {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': '••••••••'}}) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label small fw-bold text-uppercase">Confirmation</label>
                        {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Répétez le mdp'}}) }}
                    </div>
                </div>

                {# Affichage des erreurs globales du mot de passe (ex: ils ne correspondent pas) #}
                <div class="text-danger small mb-3">
                    {{ form_errors(registrationForm.plainPassword.first) }}
                </div>

                <div class="form-text small text-muted mb-4">
                    <i class="bi bi-info-circle"></i> Le mot de passe doit contenir au moins 6 caractères.
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100 shadow-sm fw-bold">
                    CRÉER MON COMPTE
                </button>

                {{ form_end(registrationForm) }}

                <div class="text-center mt-4">
                    <hr class="text-muted">
                    <p class="small text-muted mb-0">Déjà client ?</p>
                    <a href="{{ path('app_login') }}" class="text-decoration-none fw-bold text-primary">Se connecter à l'espace client</a>
                </div>
            </div>
        </div>
    </div>

    <script>
        function toggleCompanyFields() {
            // On cherche le bouton radio "company"
            const companyRadio = document.querySelector('input[name="registration_form[accountType]"][value="company"]');
            const companyFields = document.getElementById('company-fields');
            const companyNameInput = document.getElementById('registration_form_companyName');
            const siretInput = document.getElementById('registration_form_siret');

            if (companyRadio && companyRadio.checked) {
                // Afficher la section entreprise
                companyFields.style.display = 'block';
                // Rendre les champs obligatoires pour la validation HTML5
                companyNameInput.setAttribute('required', 'required');
                siretInput.setAttribute('required', 'required');
            } else {
                // Cacher la section entreprise
                companyFields.style.display = 'none';
                // Retirer l'obligation
                companyNameInput.removeAttribute('required');
                siretInput.removeAttribute('required');
            }
        }
        
        // On lance la fonction au chargement de la page (au cas où la page se recharge avec une erreur de formulaire)
        document.addEventListener("DOMContentLoaded", function() {
            toggleCompanyFields();
        });
    </script>
{% endblock %}
