{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Work Together Data Solutions{% endblock %}</title>

    {# Intégration de Bootstrap 5 via CDN (pour le style immédiat) #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    {% block stylesheets %}{% endblock %}
</head>
<body class="d-flex flex-column min-vh-100">

{# --- BARRE DE NAVIGATION --- #}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
    <div class="container">
        {# Le lien vers la page d'accueil fonctionne car vous avez créé le HomeController #}
        <a class="navbar-brand fw-bold" href="{{ path('app_home') }}">
            Work Together
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" href="{{ path('app_home') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    {# Lien ancre vers la section offres de la page d'accueil #}
                    <a class="nav-link" href="{{ path('app_home') }}#offres">Nos Offres</a>
                </li>
            </ul>

            {# --- ZONE UTILISATEUR --- #}
            {# J'ai mis des liens '#' pour l'instant car vos routes de login n'existent pas encore #}
            <div class="d-flex">
                {# Bouton de login fictif #}
                <a href="/register" class="btn btn-outline-light me-2">Connexion</a>

                {# Bouton d'inscription fictif #}
                <a href="#" class="btn btn-warning">Créer un compte</a>
            </div>
        </div>
    </div>
</nav>

{# --- MESSAGES DE NOTIFICATION (FLASH) --- #}
<div class="container">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}
</div>

{# --- CONTENU DE LA PAGE --- #}
<main class="flex-grow-1">
    {% block body %}{% endblock %}
</main>

{# --- PIED DE PAGE (FOOTER) --- #}
<footer class="bg-light text-center text-lg-start mt-auto border-top">
    <div class="container p-4">
        <div class="row">
            <div class="col-lg-6 col-md-12 mb-4">
                <h5 class="text-uppercase">Work Together Data Solutions</h5>
                <p class="text-muted">
                    Expertise en sécurité, fiabilité et durabilité pour vos infrastructures.
                </p>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <h5 class="text-uppercase">Liens utiles</h5>
                <ul class="list-unstyled mb-0">
                    <li><a href="#" class="text-dark text-decoration-none">Mentions légales</a></li>
                    <li><a href="#" class="text-dark text-decoration-none">CGV</a></li>
                </ul>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <h5 class="text-uppercase">Contact</h5>
                <ul class="list-unstyled">
                    <li><a href="#" class="text-dark text-decoration-none">Support</a></li>
                    <li><a href="#" class="text-dark text-decoration-none">Commercial</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="text-center p-3 bg-dark text-white">
        © {{ 'now'|date('Y') }} Work Together Data Solutions
    </div>
</footer>

{# Scripts Bootstrap #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

{% block javascripts %}{% endblock %}
</body>
</html>
